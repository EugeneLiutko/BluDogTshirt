@using EuluBlueMarket.Models
@model InfoForPageProductModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <h2>Exchange</h2>


    <div class="input-group mb-3" style="width:230px;">

        <select class="custom-select" id="inputGroupSelect01">
            <option selected>Ваша пропозиція</option>
            @if (User.Identity.IsAuthenticated)
            {
                string UID = System.Web.HttpContext.Current.User.Identity.Name;
                int i = 1;

                foreach (MarketItem gpm in Model.ProductModels)
                {
                    if (gpm.UserID == UID)
                    {
                        <option value="@i">@gpm.Price грн - @gpm.Name</option>
                        i++;
                        @*<a class="dropdown-item" href="#">@gpm.Price грн - @gpm.Name</a>*@
                    }

                }

            }
        </select>
    </div>


    @Scripts.Render("~/bundles/jquery")
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
</body>
</html>